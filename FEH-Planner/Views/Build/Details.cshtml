@model Build

@{
    ViewBag.Title = "Build Details";
}

<h2>Build Details</h2>

<ul class="list-group">
    <li class="list-group-item">
        <label>Name:</label>
        @Model.Name
    </li>
    <li class="list-group-item">
        <label>Unit:</label>
        @Model.Unit.Name
    </li>
    <li class="list-group-item">
        <label>Weapon:</label>
        @((Model.WeaponID == null) ? "" :Model.Weapon.Name)
    </li>
    <li class="list-group-item">
        <label>A_Skill:</label>
        @((Model.A_SkillID == null) ? "" :Model.A_Skill.Name)
    </li>
    <li class="list-group-item">
        <label>B Skill:</label>
        @((Model.B_SkillID == null) ? "" :Model.B_Skill.Name)
    </li>
    <li class="list-group-item">
        <label>C Skill:</label>
        @((Model.C_SkillID == null) ? "" :Model.C_Skill.Name)
    </li>
    <li class="list-group-item">
        <label>S Skill:</label>
        @((Model.S_SkillID == null) ? "" :Model.S_Skill.Name)
    </li>
    <li class="list-group-item">
        <label>Total SP:</label>
        @{
            int total = 0;
            if (Model.WeaponID != null) { total += Model.Weapon.SP; }
            if (Model.A_SkillID != null) { total += Model.A_Skill.SP; }
            if (Model.B_SkillID != null) { total += Model.B_Skill.SP; }
            if (Model.C_SkillID != null) { total += Model.C_Skill.SP; }
            if (Model.S_SkillID != null) { total += Model.S_Skill.SP; }
            @total.ToString("0000");
            }
    </li>
    <li class="list-group-item">
        <a asp-action="Edit" asp-controller="Build" asp-route-id="@Model.BuildID" class="btn btn-dark">Edit</a>
        <a asp-action="Delete" asp-controller="Build" asp-route-id="@Model.BuildID" class="btn btn-dark">Delete</a>
        <a asp-action="Index" asp-controller="Home" class="btn btn-dark">Home</a>
    </li>
</ul>