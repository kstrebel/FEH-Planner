@model BuildViewModel

@{
    ViewBag.Title = "Build Details";
}

<h2>Build Details</h2>

<ul class="list-group">
    <li class="list-group-item">
        <label>Name:</label>
        @Model.Build.Name
    </li>
    <li class="list-group-item">
        <label>Unit:</label>
        @Model.Build.Unit.Name
    </li>
    <li class="list-group-item">
        <label>Weapon:</label>
        @((Model.Build.WeaponID == null) ? "" :Model.Build.Weapon.Name)
    </li>
    <li class="list-group-item">
        <label>A_Skill:</label>
        @((Model.Build.A_SkillID == null) ? "" :Model.Build.A_Skill.Name)
    </li>
    <li class="list-group-item">
        <label>B Skill:</label>
        @((Model.Build.B_SkillID == null) ? "" :Model.Build.B_Skill.Name)
    </li>
    <li class="list-group-item">
        <label>C Skill:</label>
        @((Model.Build.C_SkillID == null) ? "" :Model.Build.C_Skill.Name)
    </li>
    <li class="list-group-item">
        <label>S Skill:</label>
        @((Model.Build.S_SkillID == null) ? "" :Model.Build.S_Skill.Name)
    </li>
    <li class="list-group-item">
        <label>Total SP:</label>
        @{
            int total = 0;
            if (Model.Build.WeaponID != null) { total += Model.Build.Weapon.SP; }
            if (Model.Build.A_SkillID != null) { total += Model.Build.A_Skill.SP; }
            if (Model.Build.B_SkillID != null) { total += Model.Build.B_Skill.SP; }
            if (Model.Build.C_SkillID != null) { total += Model.Build.C_Skill.SP; }
            if (Model.Build.S_SkillID != null) { total += Model.Build.S_Skill.SP; }
            @total.ToString("0000");
            }
    </li>
    <li class="list-group-item">
        <a asp-action="Edit" asp-controller="Build" asp-route-id="@Model.Build.BuildID" class="btn btn-dark">Edit</a>
        <a asp-action="Delete" asp-controller="Build" asp-route-id="@Model.Build.BuildID" class="btn btn-dark">Delete</a>
        <a asp-action="Index" asp-controller="Home" class="btn btn-dark">Home</a>
        @*Link to download file with build info*@
    </li>
</ul>