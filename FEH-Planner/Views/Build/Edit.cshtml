@model BuildViewModel

@{
    ViewBag.Title = $"{ ViewBag.Action} Build";
}

<h2>@ViewBag.Action Build</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="@Model.Build" />

    <div class="form-group row">
        <label asp-for="@Model.Build.Name" class="col-sm-2 col-form-label">Build Name</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Build.Name" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Build.UnitID" class="col-sm-2 col-form-label">Unit</label>
        <div class="col-sm-10">
            <select asp-for="@Model.Build.UnitID" class="form-control">
                <option value="0">Select a unit</option>
                @foreach (Unit u in Model.Units)
                {
                    <option value="@u.UnitID">@u.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Build.WeaponID" class="col-sm-2 col-form-label">Weapon</label>
        <div class="col-sm-10">
            <select asp-for="@Model.Build.WeaponID" class="form-control">
                <option value="0">Select a weapon</option>
                @foreach (Skill w in Model.Weapons)
                {
                    <option value="@w.SkillID">@w.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Build.A_SkillID" class="col-sm-2 col-form-label">A Skill</label>
        <div class="col-sm-10">
            <select asp-for="@Model.Build.A_SkillID" class="form-control">
                <option value="0">Select an A skill</option>
                @foreach (Skill a in Model.A_Skills)
                {
                    <option value="@a.SkillID">@a.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Build.B_SkillID" class="col-sm-2 col-form-label">B Skill</label>
        <div class="col-sm-10">
            <select asp-for="@Model.Build.B_SkillID" class="form-control">
                <option value="0">Select a B skill</option>
                @foreach (Skill b in Model.B_Skills)
                {
                    <option value="@b.SkillID">@b.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Build.C_SkillID" class="col-sm-2 col-form-label">C Skill</label>
        <div class="col-sm-10">
            <select asp-for="@Model.Build.C_SkillID" class="form-control">
                <option value="0">Select a C skill</option>
                @foreach (Skill c in Model.C_Skills)
                {
                    <option value="@c.SkillID">@c.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Build.S_SkillID" class="col-sm-2 col-form-label">S Skill</label>
        <div class="col-sm-10">
            <select asp-for="@Model.Build.S_SkillID" class="form-control">
                <option value="0">Select an S skill</option>
                @foreach (Skill s in Model.S_Skills)
                {
                    <option value="@s.SkillID">@s.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-dark">@ViewBag.Action</button>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            @if (ViewBag.Action == "Edit")
            {
                <a asp-action="Details" asp-controller="Build" asp-route-id="@Model.Build.BuildID" type="submit" class="btn btn-dark">Cancel</a>
            }
            else
            {
                //Link to upload file with build info
                <a asp-action="Index" asp-controller="Home" class="btn btn-dark">Cancel</a>
            }
        </div>
    </div>
</form>