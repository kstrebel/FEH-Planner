@model IEnumerable<Skill>

@{
    ViewBag.Title = "Skill Manager";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="Skill" class="ml-2">Add Skill</a>
</p>
<table class="table mt-2">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Slot)</th>
            <th>@Html.DisplayNameFor(model => model.SP)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Inheritable)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Skill skill in Model)
        {
            <tr>
                <td>@skill.Name</td>
                <td>@skill.Slot.Name</td>
                <td>@skill.SP</td>
                <td>@skill.Description</td>
                <td>@skill.Inheritable</td>
                <td>
                    <a asp-action="Edit" asp-controller="Skill" asp-route-id="@skill.SkillID">Edit</a>
                    <a asp-action="Details" asp-controller="Skill" asp-route-id="@skill.SkillID">Details</a> |
                    <a asp-action="Delete" asp-controller="Skill" asp-route-id="@skill.SkillID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
