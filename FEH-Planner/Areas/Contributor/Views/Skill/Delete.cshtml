@model SkillViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this skill?</h3>
<div>
    <h4>Skill</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Name</dt>
        <dd class = "col-sm-10">@Model.Skill.Name</dd>

        <dt class = "col-sm-2">Slot</dt>
        <dd class = "col-sm-10">@Model.Skill.Slot</dd>

        <dt class = "col-sm-2">SP</dt>
        <dd class = "col-sm-10">@Model.Skill.SP</dd>

        <dt class = "col-sm-2">Description</dt>
        <dd class = "col-sm-10">@Model.Skill.Description</dd>

        <dt class = "col-sm-2">Inheritable</dt>
        <dd class = "col-sm-10">@Model.Skill.Inheritable</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Skill.SkillID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
