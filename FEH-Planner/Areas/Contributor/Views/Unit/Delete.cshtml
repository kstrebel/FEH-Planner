@model UnitViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this unit?</h3>
<div>
    <h4>Unit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Unit.Name</dd>

        <dt class="col-sm-2">Epithet</dt>
        <dd class="col-sm-10">@Model.Unit.Epithet</dd>

        <dt class="col-sm-2">Entry 1</dt>
        <dd class="col-sm-10">@((Model.Unit.Entry1==null)?"":Model.Unit.Entry1.Name)</dd>

        <dt class="col-sm-2">Entry 2</dt>
        <dd class="col-sm-10">@((Model.Unit.Entry2==null)?"":Model.Unit.Entry2.Name)</dd>

        <dt class="col-sm-2">Move Type</dt>
        <dd class="col-sm-10">@((Model.Unit.MoveType==null)?"":Model.Unit.MoveType.Name)</dd>

        <dt class="col-sm-2">Weapon Type</dt>
        <dd class="col-sm-10">
            @if (Model.Unit.WeaponType != null && Model.Unit.WeaponType.WeaponTypeID > 3)
            {
                @Model.Unit.WeaponType.Color
            }
            @Model.Unit.WeaponType.Weapon
        </dd>
        <dt class="col-sm-2">Special Type</dt>
        <dd class="col-sm-10">@((Model.Unit.SpecialType==null)?"":Model.Unit.SpecialType.Name)</dd>

        <dt class="col-sm-2">Availability</dt>
        <dd class="col-sm-10">@((Model.Unit.Availability==null)?"":Model.Unit.Availability.Name)</dd>

        <dt class="col-sm-2">Lowest Rarity</dt>
        <dd class="col-sm-10">@Model.Unit.LowestRarity</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Unit.UnitID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
