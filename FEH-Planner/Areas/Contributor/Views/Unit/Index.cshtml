@model IEnumerable<Unit>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Epithet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entry2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoveType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeaponType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Availability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LowestRarity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Epithet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entry1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entry2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoveType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeaponType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availability)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LowestRarity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UnitID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UnitID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UnitID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
